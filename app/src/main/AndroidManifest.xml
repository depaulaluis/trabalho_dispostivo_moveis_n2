<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rijo.leticia.converter">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logomoeda"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logomoeda_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Converter">
        <activity
            android:name=".Curiosidades"
            android:exported="true"
            android:label="@string/title_activity_curiosidades"
            android:theme="@style/Theme.Converter.NoActionBar" />
        <activity
            android:name=".SaibaMais"
            android:exported="true"
            android:label="@string/title_activity_saiba_mais"
            android:theme="@style/Theme.Converter.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>